pipeline {
    agent any

    stages{
        stage('Build'){
            steps{
                echo "Building project"
            }
        }
    }

    post{
        success{
            emailext attachLog: true, body: 'Email sent out from Jenkins', subject: 'Test email - Success', to: 'ravella.nani123@gmail.com'
        }

        failure{
            emailext attachLog: true, body: 'Email sent out from Jenkins', subject: 'Test email - Failed', to: 'ravella.nani123@gmail.com'
        }
    }
}
